
<div class="container-fluid">
    <div class="row">
        <div class="col mt-2">
            <form id="form1">
                <div class="row">
                    <div class="col-md-6 my-3">
                        <strong class="text-light">Full name</strong>
                        <input type="text" name="name1" id="name1" class="form-control">

                    </div>
                    <div class="col-md-6 my-3">
                        <strong class="text-light">Username</strong>
                        <input type="text" name="username1" id="username1" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 my-3">

                        <strong class="text-light">Email</strong>
                        <input type="email" name="email1" id="email1" class="form-control">

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 my-3">
                        <strong class="text-light">Affiliation</strong>
                        <input type="text" id="affiliation1" name="affiliation1" class="form-control">

                    </div>
                    <div class="col-md-6 my-3">
                        <strong class="text-light">Country</strong>
                        <input type="text" id="country1" name="country1" class="form-control">

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 my-3">
                        <strong class="text-light">Password</strong>
                        <input type="password" id="password1" name="password1" class="form-control">

                    </div>
                    <div class="col-md-6 my-3">
                        <strong class="text-light">Confirm password</strong>
                        <input type="password" id="rePassword1" name="rePassword1" class="form-control">


                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-12 mb-1">
                                <span class="text-light">Password: 5 to 30 characters which contain only
                                    characters,
                                    numeric
                                    digits, underscore and first character must be a letter</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 mt-3">
                    <div class="form-group mb-3">
                        <center>
                            <button class="btn btn-success btn-lg btn-block" id="btnUserSignup"
                                onclick="createUserAccount(event)">
                                Create Account
                            </button>
                        </center>
                    </div>
                </div>
        </div>
        </form>
    </div>
</div>
<script src="/js/register/userregistration.js"></script>