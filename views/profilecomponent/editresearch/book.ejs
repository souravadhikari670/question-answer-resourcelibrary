<%- include('../../bootstrap') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-12 mt-2 mb-3">
            <strong>Title</strong>
            <input type="text" class="form-control" id="bookTitle">
        </div>
        <div class="col-12 mt-2 mb-3">
            <strong>Authors (For example: Patterson, David, Lamport, Leslie)</strong>
            <input type="text" class="form-control" id="bookAuthor">
        </div>
        <div class="col-12 mt-2 mb-3">
            <strong>Keywords (For example: a, b, c)</strong>
            <input type="text" class="form-control" id="bookKeyword">
        </div>
        <div class="col-12 mt-2 mb-3">
            <strong>Publication date (For example: 2019, 2019/12 or 2019/10/31)</strong>
            <input type="text" class="form-control" id="bookDate">
        </div>
        <div class="col-12 mt-2 mb-3">
            <strong>Abstract / Description</strong>
            <textarea name="bookAbstract" class="form-control" id="bookAbstract" rows="6"></textarea>
        </div>
        <div class="col-12 mt-2 mb-3">
            <strong>Volume</strong>
            <input type="text" id="bookVolume" class="form-control">
        </div>
        <div class="col-12 mt-2 mb-3">
            <strong>Pages</strong>
            <input type="text" id="bookPage" class="form-control">
        </div>
        <div class="col-12 mt-2 mb-3">
            <strong>Publisher</strong>
            <input type="text" id="bookPublisher" class="form-control">
        </div>
