<%- include('../../../bootstrap') %>

<body>
    
    <div class="container mt-5 mb-3 shadow-lg rounded" style="min-height: 50vh;">
        <div class="row">
            <div class="col-12 mt-2 mb-3 text-center" style="color: #0A3D62;">
                <h5><%= patent.title %></h5>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-3">
                <strong>Inventors : </strong>
                <% patent.inventors.forEach(function(a) { %>
                    <%= a %>
                <% }) %>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-3">
                <strong>Publication date : </strong><%= patent.publicationdate %>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-3">
                <strong>Description : </strong>
                
                    <%= patent.description %>
                
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-3">
                <strong>Patent office : </strong>
                
                    <%= patent.patentoffice %>
                
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-3">
                <strong>Patent number : </strong><%= patent.patentnumber %>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-3">
                <strong>Application number : </strong><%= patent.applicationnumber %>
            </div>
        </div>
    </div>


</body>
<%- include('../../../footer') %>
