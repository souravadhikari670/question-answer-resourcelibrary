<%- include('../bootstrap') %>

<!-- Modal -->
<div class="modal fade" id="editProfileModal" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Edit profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="pills-uploadphoto-tab" data-toggle="pill"
                                        href="#pills-uploadphoto" role="tab" aria-controls="pills-uploadphoto"
                                        aria-selected="true">uploadphoto</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="pills-updateprofile-tab" data-toggle="pill"
                                        href="#pills-updateprofile" role="tab" aria-controls="pills-updateprofile"
                                        aria-selected="false">updateprofile</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="pills-tabContent">

                                <div class="tab-pane fade show active" id="pills-uploadphoto" role="tabpanel"
                                    aria-labelledby="pills-uploadphoto-tab">
                                    <div class="col-12 mt-2 mb-3">
                                        <strong>upload photo</strong>
                                        <div class="input-group mb-3">
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" id="uploadprofilepic"
                                                    aria-describedby="uploadprofilepic" accept="image/*">
                                                <label class="custom-file-label upload-profile-pic"
                                                    for="uploadprofilepic">Choose
                                                    file</label>
                                            </div>
                                        </div>
                                        <strong>Photo mustbe less than 3mb</strong>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 mb-2">
                                            <div class="progress d-none" id="uploadprofilepicCon">
                                                <div class="progress-bar progress-bar-striped progress-bar-animated bg-dark"
                                                    role="progressbar" aria-valuenow="75" aria-valuemin="0"
                                                    aria-valuemax="100" style="width: 75%"
                                                    id="uploadprofilepicprogress"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <button class="btn btn-dark float-right" id="uploadprofilepicButton"
                                            onclick="uploadprofilepic(event)" disabled>upload</button>
                                    </div>
                                </div>

                                <div class="tab-pane fade" id="pills-updateprofile" role="tabpanel"
                                    aria-labelledby="pills-updateprofile-tab">

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label for="bioBody"><strong>Add Bio: </strong></label>
                                                <textarea name="bioBody" class="form-control" id="bioBody"
                                                    rows="3"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                            <div class="col-12">
                                                <button class="btn btn-dark float-right" onclick="uploadBio(event)">Add</button>
                                            </div>
                                        </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>